<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
          <pattern>%date{ISO8601} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.colisweb.tracing" level="TRACE"/>
    <logger name="org.fusesource.scalate" level="OFF" />
    <logger name="lambda" level="DEBUG"/>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>