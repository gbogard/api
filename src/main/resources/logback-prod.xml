<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
          <pattern>[%level][%date{ISO8601}][%logger{16}] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.fusesource.scalate" level="OFF" />
    <logger name="lambda.api.infrastructure.gateway.Api" level="INFO" />

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>