(common) {
  ratelimit * / 4 8 second
  tls hey@guillaumebogard.dev
}

localhost:80 lambdacademy.dev {
  import common
  root /www/front
  rewrite /dashboard/{path} {
    to dashboard/{path} dashboard/index.html
  } 
}

localhost:8080 {
  import common
  proxy / api:8080
}

www.lambdacademy.dev {
  redir https://lambdacademy.dev{uri}
}

api.lambdacademy.dev {
  import common
  proxy / api:8080
}