(common) {
  ratelimit * / 4 6 second
  tls hey@guillaumebogard.dev
  dns cloudflare
}

www.lambdacademy.dev {
  import common
  redir https://lambdacademy.dev{uri}
}

lambdacademy.dev {
  import common
  root /www/front/showcase
}

dashboard.lambdacademy.dev {
  import common
  root /www/front/dashboard
  rewrite {
    to {path} {path}/ /index.html
  } 
}

api.lambdacademy.dev {
  import common
  proxy / api:8080
}