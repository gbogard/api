{
  "name": "lambdacademy-front",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:gbogard/lambdacademy.git",
  "author": "Guillaume Bogard <bogardguillaume@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "showcase:start": "parcel front/* front/showcase/index.pug",
    "showcase:build": "parcel build front/showcase/index.pug --out-dir dist/showcase",
    "dashboard:start": "parcel front/dashboard/index.pug --out-dir dist/dashboard --port 1111",
    "dashboard:build": "parcel build front/dashboard/index.pug --out-dir dist/dashboard",
    "re:build": "bsb -make-world -clean-world",
    "re:watch": "bsb -make-world -clean-world -w",
    "build": "rimraf dist && yarn re:build && yarn dashboard:build && yarn showcase:build",
    "dev": "rimraf dist lib && concurrently 'yarn re:watch' 'yarn showcase:start' 'yarn dashboard:start'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{re,rei}": [
      "refmt --in-place",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "babel-plugin-prismjs": "^1.1.1",
    "bs-platform": "^5.0.6",
    "bsb-js": "^1.1.7",
    "concurrently": "4.1.1",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-compress": "^1.0.10",
    "pug": "^2.0.4",
    "rimraf": "^2.6.3",
    "sass": "^1.22.7"
  },
  "dependencies": {
    "@glennsl/bs-json": "^4.0.0",
    "@moox/bs-react-helmet": "^2.0.0",
    "brace": "^0.11.1",
    "bs-css": "^9.0.1",
    "bs-fetch": "^0.5.0",
    "dompurify": "^1.0.11",
    "marked": "^0.7.0",
    "prism": "^4.1.2",
    "prismjs": "^1.17.1",
    "rationale": "^0.1.10",
    "react-helmet": "^5.2.1",
    "react-motion-drawer": "^3.1.0",
    "reason-react": "^0.7.0",
    "reason-react-update": "^0.1.1"
  }
}
